      <application handle="qut-tweak" type="course" use-ssl="false" name="Tweak" can-allow-guest="true"
       small-icon="tweakbb-icon2_big.gif" large-icon="tweakbb-icon2_big.gif">
        <description lang="en_US"></description>
        <links>
          <link>
            <name value="Tweak"></name>
            <url value="files/index.jsp" ></url>
            <description value="Tweak." ></description>
            <icons>
              <listitem value="images/tweak_icon.jpg"></listitem>
            </icons>
          </link>
        </links>
      </application>
    </application-defs> -->
    
    
    
    <!-- code permissions required for proper operation -->
    <permissions>
      <permission type="attribute" name="user.authinfo" actions="get"/>
      <permission type="persist" name="Content" actions="create,display,modify,delete"/>
      <permission type="java.io.FilePermission" name="&amp;lt;&amp;lt;ALL FILES&amp;gt;&amp;gt;" actions="read,write,delete"/>	
    </permissions>
  </plugin>

</manifest>